<h1>My Inbox</h1>

<%= link_to "Add New Chat", new_chat_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Participant</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td>
          <%= chat.other_participant(current_user).first_name %>
          <%= chat.other_participant(current_user).last_name %>
        </td>
        <td>
          <%= link_to "Show", chat_path(chat) %> |
          <%= link_to "Edit", edit_chat_path(chat) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h2>Navigation</h2>
<ul>
  <% if current_user&.admin? %>
    <li><%= link_to "View Users", users_path %></li>
  <% end %>
  <li><%= link_to "View Messages", messages_path %></li>
</ul>

